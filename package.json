    "apollo-server-core": "^3.6.6",
    "apollo-server-express": "^3.6.6",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "graphql": "^16.3.0",
    "md5": "^2.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/md5": "^2.3.2",
    "@types/node": "^17.0.23",
    "nodemon": "^2.0.15",
    "ts-node": "^10.7.0",
    "tsc-watch": "^4.6.2",
