{
  "name": "cerebro",
  "version": "0.0.1",
  "description": "Cerebro is an Apollo Server based on GraphQL to retrieve Marvel's comic books data.",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc-watch --onSuccess \"npm run watch\"",
    "lint": "eslint . --ext .ts",
    "start": "node --experimental-specifier-resolution=node dist/index.js",
    "watch": "nodemon --watch './**/*.{ts,graphql}' --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm' src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Rossano D'Angelo",
  "license": "ISC",
  "type": "module",
  "exports": "./dist/index.js",
  "dependencies": {
    "apollo-datasource-rest": "^3.5.2",
    "apollo-server-core": "^3.6.6",
    "apollo-server-express": "^3.6.6",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "graphql": "^16.3.0",
    "md5": "^2.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/md5": "^2.3.2",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "eslint": "^8.12.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "nodemon": "^2.0.15",
    "ts-node": "^10.7.0",
    "tsc-watch": "^4.6.2",
    "typescript": "^4.6.3"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run lint --fix",
      "npm run test test --bail --findRelatedTests"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
